<% render :partial => 'admin/shared/product_sub_menu' %>
<h1><%= "#{t("actions.listing")} #{t("presses")}" %></h1>

<div class='toolbar'>
  <ul class='actions'>
    <li id="new_ot_link">
      <%= button_link_to t("new_press"), new_object_url, :icon => 'add' %>
    </li>
  </ul>
  <br class='clear' />
</div>

<table class="index">
  <tr>
    <th><%= sort_link @search, :name, t("name") %></th>
    <th>
    </th>
  </tr>
  <% @collection.each do |press| %>
    <tr id="<%= dom_id press %>">
      <%- locals = {:press => press} -%>
      <td><%= press.name %></td>
      <td class="actions">
        <%= link_to_edit press   %>
        &nbsp;
        <%= link_to_delete press   %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate(:previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>

<% content_for :sidebar do %>

  <% form_for [:admin, @search] do |f| %>
    <div class="box">
      <h3><%= t(:search) %></h3>

      <%- locals = {:f => f} -%>
      <p>
        <label><%= t("name") %></label><br />
        <%= f.text_field :name_contains, :size => 15 %>
      </p>

      <p class="form-buttons">
        <%= button t("search") %>
      </p>
    </div>
  <% end %>

<% end %>

